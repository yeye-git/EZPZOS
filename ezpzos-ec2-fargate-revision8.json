{
    "family": "ezpzos-ec2-fargate",
    "networkMode": "awsvpc",
    "taskRoleArn": "arn:aws:iam::975049907995:role/ecsTaskExecutionRole",
    "executionRoleArn": "arn:aws:iam::975049907995:role/ecsTaskExecutionRole",
    "containerDefinitions": [
        {
            "name": "ezpzos-express",
            "image": "975049907995.dkr.ecr.ap-southeast-2.amazonaws.com/ezpzos-express:1.0",
            "portMappings": [
                {
                    "containerPort": 8000,
                    "hostPort": 8000,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "healthCheck": {
                "command":  [ "CMD-SHELL", "curl -f http://3.27.71.214:8000 || exit 1" ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            }
        }
    ],
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "256",
    "memory": "512"
}
